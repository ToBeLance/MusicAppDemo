<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/my_black"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/album"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/no_album_default_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"/>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/song_name"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="king"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/singer"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="king_happyking_happyking_happyking_happy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/play_control"
        android:background="@drawable/button_background_color_select"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_play_circle_outline_24"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/next_song"
        android:background="@drawable/button_background_color_select"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_skip_next_24"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/cancel"
        android:background="@drawable/button_background_color_select"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_cancel_presentation_24"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</LinearLayout>