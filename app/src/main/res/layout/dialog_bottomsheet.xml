<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_black"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/button_background_color_select"
            android:id="@+id/cancel_playing_page"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>
        <com.kun.musicappdemo.view.MarqueeTextView
            android:id="@+id/song_name_and_singer"
            android:layout_marginStart="60dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="songNAmeandfgeq"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="125dp">
        <ImageSwitcher
            android:id="@+id/dialog_album_imgSwitcher"
            android:layout_width="250dp"
            android:layout_height="250dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/played_time"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/all_time"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/button_background_color_select"
            android:id="@+id/pre_song"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_skip_previous_24"/>
        <ImageView
            android:background="@drawable/button_background_color_select"
            android:id="@+id/dialog_play_control"
            android:layout_marginStart="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_play_circle_outline_24"/>
        <ImageView
            android:background="@drawable/button_background_color_select"
            android:id="@+id/next_song"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_skip_next_24"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</LinearLayout>